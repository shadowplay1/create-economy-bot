{
	"compilerOptions": {
		"strict": true,
		"alwaysStrict": true,
		"lib": [
			"ES5",
			"ES6",
            "ES2021",
            "ES2021.String",
			"DOM", 
			"DOM.Iterable"
        ],
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "ESNext",
		"outDir": "lib",
		"rootDir": "./",
		"types": [
			"node"
		],
		"sourceMap": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"strictNullChecks": true,
		"skipLibCheck": false,
		"skipDefaultLibCheck": false,
		"resolveJsonModule": true
	},
	"ts-node": {
		"transpileOnly": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"lib",
		"scripts"
	]
}
