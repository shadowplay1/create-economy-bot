{
	"compilerOptions": {
		"strict": true,
		"alwaysStrict": true,
		"lib": [
			"es5",
			"es6",
            "es2021",
			"dom", 
			"dom.iterable"
        ],
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "ESNext",
		"outDir": "lib",
		"rootDir": "./",
		"types": [
			"node"
		],
		"sourceMap": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"strictNullChecks": true,
		"skipLibCheck": false,
		"skipDefaultLibCheck": false,
		"resolveJsonModule": true
	},
	"ts-node": {
		"transpileOnly": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"lib",
		"scripts"
	]
}
